@{
    ViewData["Title"] = "Página Inicial";
}

<h1 style="text-align: center;">Crie ou Entre em uma Sala de Estimativas</h1>

<div style="text-align: center; margin-top: 20px;">
    <h2>Criar uma nova sala</h2>
    <form asp-action="CriarSala" method="post">
        <input type="text" name="nomeCriador" placeholder="Digite seu nome" required style="padding: 5px; font-size: 16px;" />
        <button type="submit" style="padding: 10px 20px; font-size: 16px;">Criar Sala</button>
    </form>
</div>

<div style="text-align: center; margin-top: 40px;">
    <h2>Entrar em uma sala existente</h2>
    <form asp-action="EntrarSala" method="post">
        <input type="text" name="id" placeholder="ID da sala" required style="padding: 5px; font-size: 16px;" />
        <input type="text" name="nome" placeholder="Seu nome" required style="padding: 5px; font-size: 16px;" />
        <button type="submit" style="padding: 10px 20px; font-size: 16px;">Entrar</button>
    </form>
</div>
